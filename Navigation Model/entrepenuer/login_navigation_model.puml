@startuml
skinparam shadow false
skinparam roundCorner 15

package "Navigation Diagram: Sistema de Acceso" {

    ' La "Clase de Navegación" principal que agrupa todo
    class "SistemaAcceso" as Nav_System <<navigationClass>>

    ' El Menú (como el MainMenu de tu imagen)
    class "MenuAcceso" as Menu <<menu>>

    ' Clases de Navegación (Páginas)
    class "Login" as Nav_Login <<navigationClass>>
    class "Registro" as Nav_Register <<navigationClass>>
    class "RecuperarPassword" as Nav_Recover <<navigationClass>>
    class "CompletarPerfil" as Nav_Setup <<navigationClass>>
    class "Dashboard" as Nav_Home <<navigationClass>>

    ' Clases de Proceso (Como el ContactCreation de tu imagen)
    ' Estas manejan la lógica que "mueve" al usuario
    class "Autenticacion" as Proc_Auth <<processClass>>
    class "VerificacionPerfil" as Proc_Check <<processClass>>

    ' --- RELACIONES ---

    ' El sistema tiene un menú principal
    Nav_System *-- Menu

    ' El menú da acceso a las páginas de entrada
    Menu --> Nav_Login : <<navigationLink>>
    Menu --> Nav_Register : <<navigationLink>>
    Menu --> Nav_Recover : <<navigationLink>>

    ' Flujo de Login hacia el proceso (Igual que MainMenu -> ContactCreation)
    Nav_Login --> Proc_Auth : <<processLink>>
    
    ' El proceso de autenticación dispara la verificación
    Proc_Auth --> Proc_Check : <<processLink>>

    ' La verificación redirige según el estado (Navegación dirigida)
    Proc_Check --> Nav_Setup : <<processLink>> : [incompleto]
    Proc_Check --> Nav_Home : <<processLink>> : [completo]

    ' El proceso de completar perfil termina en el Home
    Nav_Setup --> Nav_Home : <<processLink>>
}
@enduml