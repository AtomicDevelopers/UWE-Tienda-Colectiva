@startuml guest_user_content_model
skinparam shadow false
skinparam roundCorner 15
skinparam class {
  BackgroundColor #FEFECE
  BorderColor #A80036
  ArrowColor #A80036
}

' ==========================================
' MODELO DE CONTENIDO (UWE)
' ==========================================
' Muestra las clases del dominio y sus relaciones.

class "Usuario" as Usuario {
  + id: UUID
  + nombre: String
  + email: String
  + celular: String
  + password: String
}

class "Ubicacion" as Ubicacion {
  + id: UUID
  + direccion: String
  + coordenadas: String
}

class "Tienda" as Tienda {
  + id: UUID
  + nombre: String
  + fotoPortada: Image
  + telefono: String
  + direccion: String
  + numeroNegocios: Integer
}

class "Producto" as Producto {
  + id: UUID
  + nombre: String
  + precio: Decimal
  + descripcion: String
  + fotoUrl: String
  + cantidadExistencia: Integer
  + cantidadVendida: Integer
  + esInteres: Boolean
  + createdAt: DateTime
  + updatedAt: DateTime
}

class "Etiqueta" as Etiqueta <<content class>> {
  + id: UUID
  + nombre: String
}

class "Espacio" as Espacio {
  + id: UUID
  + informacion: String
  + disponibilidad: String
  + fechaInicio: Date
  + fechaFin: Date
}

' Relación para marcar productos como favoritos
class "Interes" as Interes {
  + id: UUID
  + fechaAgregado: Date
}

' Relaciones

' Un usuario selecciona una ubicación
Usuario "1" -- "1" Ubicacion : selecciona >

' Relación de favoritos (Muchos a Muchos)
Usuario "0..1" -- "*" Producto : guarda >
(Usuario, Producto) .. Interes

' Producto tiene una etiqueta
Producto "*" -- "1" Etiqueta : tiene >

' Tienda contiene productos y espacios
Tienda "1" *-- "*" Producto : ofrece >
Tienda "1" *-- "*" Espacio : tiene >

@enduml
