@startuml customer_user_interest_delete_process_flow
skinparam shadow false
skinparam packageStyle rectangle
skinparam roundCorner 15
skinparam activity {
  BackgroundColor #FEFECE
  BorderColor #A80036
  ArrowColor #A80036
}

title Eliminar Interés

start

:Boton Eliminar Interés pulsado;

:<<userAction>>\nConfirmacion Eliminación;

if (Confirmar Eliminación?) then (cancelar)
  :Cancelar;
else (ok)
  :<<systemAction>>\nEliminar Interés;
  
  if (Error?) then (si)
      :<<systemAction>>\nMostrar Error;
  else (no)
      :<<systemAction>>\nRecargar Lista;
      
  endif
endif
stop
@enduml


