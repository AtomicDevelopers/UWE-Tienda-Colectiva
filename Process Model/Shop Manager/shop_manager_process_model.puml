@startuml shop_manager_process_model

skinparam shadow false
skinparam packageStyle rectangle
skinparam roundCorner 15
skinparam class {
  BackgroundColor #FEFECE
  BorderColor #A80036
  ArrowColor #A80036
}

package "Process - Encargado de Tienda" {

  class "Procesos Encargado Tienda" <<process>> {
  }

  class "Registro Tienda" <<process>> {
  }
  class "Entrada Registro Tienda" <<process>> {
    -nombre : String
    -direccion : String
    -telefono : String
    -horario : String
    -foto : Image
    --
    -validarDatos()
  }
  class "Confirmacion Registro Tienda" <<process>> {
    -crearSolicitud()
  }
  class "Error Registro Tienda" <<process>> {
    -message : String
  }

  class "Gestion Espacios" <<process>> {
  }
  class "Lista Espacios" <<process>> {
  }
  class "Crear Espacio" <<process>> {
  }
  class "Actualizar Espacio" <<process>> {
  }
  class "Eliminar Espacio" <<process>> {
  }
  class "Asignar Espacio" <<process>> {
  }
  class "Entrada DatosEspacio" <<process>> {
    -codigo : String
    -descripcion : String
    -ubicacion : String
    -estado : String
    --
    -validarDatos()
  }
  class "Entrada Asignacion Espacio" <<process>> {
    -emprendimientoId : UUID
    --
    -validarAsignacion()
  }

  class "Revision Stock" <<process>> {
  }
  class "Entrada Filtro Stock" <<process>> {
    -emprendimientoId : UUID
    -criterio : String
  }
  class "Lista Stock" <<process>> {
  }

  class "Generacion Reportes" <<process>> {
  }
  class "Entrada Filtro Reporte" <<process>> {
    -tipo : String
    -fechaInicio : Date
    -fechaFin : Date
    -emprendimientoId : UUID
    -tipoMovimiento : String
    -incluirVentas : Boolean
  }
  class "Construccion Reporte" <<process>> {
    -compilarDatos()
  }
  class "Exportar Reporte PDF" <<process>> {
    -exportarPdf()
  }

  class "Error Validacion" <<process>> {
    -message : String
  }

  class "Registro Ventas" <<process>> {
  }
  class "Entrada Ventas" <<process>> {
    -emprendimientoId : UUID
    -items : String
    --
    -validarVenta()
  }
  class "Confirmacion Venta" <<process>> {
    -guardarVenta()
    -reducirStock()
  }

  class "Movimiento Inventario" <<process>> {
  }
  class "Entrada Movimiento Inventario" <<process>> {
    -productoId : UUID
    -tipo : String
    -cantidad : Integer
    -motivo : String
    --
    -validarMovimiento()
  }
  class "Confirmacion Movimiento Inventario" <<process>> {
    -aplicarMovimiento()
  }

  ProcesosEncargadoTienda *-- RegistroTienda
  ProcesosEncargadoTienda *-- GestionEspacios
  ProcesosEncargadoTienda *-- RevisionStock
  ProcesosEncargadoTienda *-- GeneracionReportes
  ProcesosEncargadoTienda *-- RegistroVentas
  ProcesosEncargadoTienda *-- MovimientoInventario

  RegistroTienda *-- EntradaRegistroTienda
  RegistroTienda *-- ConfirmacionRegistroTienda
  EntradaRegistroTienda --> ErrorRegistroTienda

  GestionEspacios *-- ListaEspacios
  GestionEspacios *-- CrearEspacio
  GestionEspacios *-- ActualizarEspacio
  GestionEspacios *-- EliminarEspacio
  GestionEspacios *-- AsignarEspacio

  CrearEspacio *-- EntradaDatosEspacio
  ActualizarEspacio *-- EntradaDatosEspacio
  AsignarEspacio *-- EntradaAsignacionEspacio
  EntradaDatosEspacio --> ErrorValidacion
  EntradaAsignacionEspacio --> ErrorValidacion

  RevisionStock *-- EntradaFiltroStock
  RevisionStock *-- ListaStock

  GeneracionReportes *-- EntradaFiltroReporte
  GeneracionReportes *-- ConstruccionReporte
  GeneracionReportes *-- ExportarReportePDF
  EntradaFiltroReporte --> ErrorValidacion

  RegistroVentas *-- EntradaVentas
  RegistroVentas *-- ConfirmacionVenta
  EntradaVentas --> ErrorValidacion

  MovimientoInventario *-- EntradaMovimientoInventario
  MovimientoInventario *-- ConfirmacionMovimientoInventario
  EntradaMovimientoInventario --> ErrorValidacion
}
@enduml

